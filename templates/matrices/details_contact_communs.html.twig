{% extends '/nav.html.twig' %}

{% block titre %}Acceuil{% endblock%}


{% block content %}

    <ul class="uk-breadcrumb" style="margin-top: 3%">
        <li><a href="/"></a>Tableau de bord</li>
        <li class="uk-disabled"><a>Matrice des contacts en commun</a></li>
        <li class="uk-disabled"><a> Details </a></li>
    </ul>

    <div class="uk-section uk-section-default">
        <div class="uk-container uk-container-large uk-position-relative">
            <article class="uk-article">
                <h4>
                    <a class="uk-link-reset" href="">
                        Contacts en commun entre le
                        {{ data.a_person.cNumber }} ( {{ data.a_person.aNom}}  ) et {{ data.b_person.cNumber }} ( {{ data.b_person.aNom}}  )
                    </a>
                </h4>
                <hr>
                <p class="uk-article-meta">Date du {{ data.dates.start }} au {{ data.dates.end }}</p>

                <div class="uk-overflow-auto">

                    <table class="uk-table uk-table-striped uk-table-middle uk-table-justify uk-table-divider uk-table-responsive">
                        <thead>
                        <tr>
                            <th class="uk-table-expand">Numéro</th>
                            <th class="uk-table-expand">Nom</th>
                            <th class="uk-table-expand">CDR</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for common in data.commons %}
                                <tr>
                                    <td class="uk-table-expand">
                                        <span class="">{{ common.num_b }}</span>
                                    </td>
                                    <td class="uk-table-expand">
                                        {% if common.b_nom == 0 %}
                                            <span class="uk-text-danger">Non identifé</span>
                                        {% else %}
                                            <span class="">{{ common.b_nom }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="uk-table-expand">
                                        {% if common.has_cdr == true %}
                                            <span>Oui</span>
                                        {% else %}
                                            <span class="">Non</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {{ knp_pagination_render(data.commons,'/Paginator/paginator-uikit.html.twig') }}

            </article>

        </div>
    </div>


{% endblock %}
